{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>S'inscrire</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, {'attr': {'class': 'my-5'}}) }}
        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control'},
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.isCommercant, {'attr': {'class': 'form-check-input , mt-3 , ms-4'}}) }}
        {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input , mt-3 , ms-4'}}) }}

        <button type="submit" class="mt-3 btn btn-lg btn-success">S'inscrire</button>
    {{ form_end(registrationForm) }}
{% endblock %}
