{# templates/article/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="my-4">
        <h1>Liste des Articles</h1>
        <div class="mb-4">
            {{ form_start(filter_form, {'attr': {'class': 'row g-3'}}) }}
            <div class="col-md-3">
                {{ form_row(filter_form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-3">
                {{ form_row(filter_form.category, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-3">
                {{ form_row(filter_form.commercant, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-3 d-grid">
                <button type="submit" class="btn btn-primary">Rechercher</button>
            </div>
            {{ form_end(filter_form) }}
        </div>

        <div class="row">
            {% for article in articles %}
                <div class="col-lg-3 col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.name }}</h5>
                            <p class="card-text">{{ article.description }}</p>
                            <p class="card-text"><strong>Prix:</strong> {{ article.price }} €</p>
                            <p class="card-text"><strong>Stock:</strong> {{ article.stock }}</p>
                            <p class="card-text"><strong>Vendeur:</strong> {{ article.commercant.name }}</p>
                            <p class="card-text"><strong>Catégorie:</strong> {{ article.category.name }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(articles) }}
        </div>
    </div>
{% endblock %}
