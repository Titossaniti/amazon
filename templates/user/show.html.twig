{% extends 'base.html.twig' %}

{% block title %}{{ user.username }}{% endblock %}

{% block body %}
    <h1><a class="link-underline link-underline-opacity-0 me-3 text-light-emphasis fw-bold" href="{{path('commercant_index') }}">&#9166</a>{{ user.username }}</h1>

    <div class="row">
        {% for article in articles %}
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.name }}</h5>
                        <p class="card-text text-muted">{{ article.description }}</p>
                        <p class="card-text"><strong>Prix:</strong> {{ article.price }} €</p>
                        <p class="card-text"><strong>Stock:</strong> {{ article.stock }}</p>
                        <p class="card-text"><strong>Catégorie:</strong> {{ article.category.name }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <a href="{{ path('commercant_index') }}">Retour à la liste des vendeurs</a>
{% endblock %}